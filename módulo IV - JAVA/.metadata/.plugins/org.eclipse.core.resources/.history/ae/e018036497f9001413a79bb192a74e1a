package listator;

import java.io.File;
import java.util.Date;

public class main {

	public static void main(String[] args) {

		imprimir();
	}

	public void busca() {

	}

	public static void imprimir() {
		
		String dir = "C:/Users/projetocrescer/Desktop/Crescer_arthur/módulo III - Programação WEB/Exercícios/Exer_JQuery/dia06/pagina-exercicios"; 

		File diretorio = new File(dir); 
		File fList[] = diretorio.listFiles(); 

	
		System.out.println("Numero de arquivos no diretorio : " + fList.length ); 

		for ( int i = 0; i < fList.length; i++ ){ 
			File arquivo = fList[i];
			
		System.out.println(arquivo.getName() +" " + new Date(arquivo.lastModified())); 

	}
}
}
